# 資料庫設定
DB_TYPE=postgres

# 方法 1: 使用 Neon 提供的 DATABASE_URL (推薦)
# DATABASE_URL=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/dbname?sslmode=require

# 方法 2: 分別設定各個參數 (Neon 連接)
# DB_HOST=ep-xxx-xxx.us-east-1.aws.neon.tech
# DB_PORT=5432
# DB_NAME=your-database-name
# DB_USER=your-username
# DB_PASSWORD=your-password
# DB_SSL=true

# 本地開發資料庫設定 (如果不使用 Neon)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=my_event_db
DB_USER=postgres
DB_PASSWORD=0000

# 伺服器設定
PORT=3000
NODE_ENV=development 